{
  "name": "chatbot",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build:schemas": "node scripts/build-schemas.js",
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./src/tailwind.css -o ./public/styles/app.css --minify",
    "watch:css": "tailwindcss -c tailwind.config.cjs -i ./src/tailwind.css -o ./public/styles/app.css --watch",
    "prestart": "npm run build:schemas && npm run build:css",
    "start": "node index.js",
    "dev": "npm run build:schemas && npm run build:css && node index.js",
    "test": "jest --runInBand",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "utils/**/*.js",
      "validators/**/*.js",
      "models/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage"
  }
}
